<article data-article='{{id}}'>
        <div class= "container bg-secondary text-white p-2 pb-4 m-2">
            <div class = "container col-12">
                <h3>{{title}}</h3>
                <hr size= "70" color = "white">
                <h4><i>{{author}}</i></h4>
            </div>
            <div class= "col-8 col-sm-12">
            <p>{{description}}</p>
            <a class= "btn btn-danger" href = "{{URL}}">Read Article</a>
            </div>
            <div class="container col-4 col-sm-12 row">
                    <div class="form-group col-4">
                        <label for="truth">Truthfulness:</label>
                            <select class="form-control" id="truth">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                    </div>
                    <div class="form-group col-4">
                        <label for="truth">Quality:</label>
                            <select class="form-control" id="quality">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                    </div>
                    <div class="form-group col-4">
                        <label for="truth">Readability:</label>
                            <select class="form-control" id="readability">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                    </div>
                    <button type="button" class="btn btn-danger ml-3" id = "submitReview">Submit Review</button>
            </div>
        </div>
    </article>